{
  "name": "@wreathe-js/preact",
  "version": "0.1.0-alpha.1",
  "description": "Connects the engine to the transmission.",
  "homepage": "https://wreathe.dev",
  "bugs": {
    "url": "https://github.com/wreathe-js/wreathe/issues",
    "email": "contact@wreathe.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wreathe-js/wreathe.git",
    "directory": "packages/preact"
  },
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "require": "./dist/server.cjs",
      "import": "./dist/server.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "server.d.ts",
    "server.js"
  ],
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "clean": "rm -rf dist",
    "fmt:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "fmt": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@wreathe-js/core": "workspace:*",
    "lodash.isequal": "^4.5.0"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^18.11.18",
    "axios": "^1.2.2",
    "preact": "^10.11.3",
    "preact-render-to-string": "^5.2.6"
  },
  "peerDependencies": {
    "preact": "^10.11.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
