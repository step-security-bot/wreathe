{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",

    "rootDir": "src",
    "outDir": "dist",

    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "target": "ES2020",
    "types": ["node"],

    "declaration": true,
    "declarationDir": "dist",

    "allowSyntheticDefaultImports": true,

    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"],
    "strict": true
  },
  "exclude": ["**/dist/**", "build.config.ts", "./server.d.ts", "./server.js"]
}
